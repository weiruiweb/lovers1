/**index.wxss**/
@import "../../wxParse/wxParse.wxss"
.p60{
	width:84%;
	padding:0 8%;
}
.lovers{
	width:84%;
	padding:0 8%;
	position:absolute;
	bottom: 50rpx;
	left:0;
}
.lovers_txt{
	margin-top: 190rpx;
}
.lovers_txt>view{
	width:16.666%;
	text-align: center;
}
.wx_name{
	width:100%;
	text-align: center;
}
.wx_name>view{
	width:20%;
	text-align: center;
}
.wx_name image{
	width:256rpx;
	height:40rpx;
	margin:0 auto;
}
.heart_box{
	width:100%;
	height:266rpx;
	position: relative;
	margin-top:220rpx;
}
.line3{
	position: absolute;
	left: 0;
	top:0;
	width:100%;
	height:266rpx;
	z-index: 9;
}

.line1{
	width:100%;
	height:200rpx;
	position: absolute;
	left:0;
	top:0;
	z-index: 1;
}
.line1 image,.line3 image,.line2 image{
	width:100%;
	height:100rpx;
}
.line2{
	width:100%;
	height:266rpx;
	position: absolute;
	left:0;
	top:0;
	z-index: 6;
}
.heart{
	width:216rpx;
	height:216rpx;
	margin:0 auto;
	border-radius:50%;
	background:#7c3c3c;
	-webkit-animation: ripple2 1s linear infinite;
    animation: ripple2 1s linear infinite;
}
.heart_img{
	width:146rpx;
	height:104rpx;
	margin:0 auto;
	z-index: 999;
}
@keyframes ripple2{
	0%{
		box-shadow: 0 0 0 10rpx rgba(254,101,101, 0.2);
		transform:scale3d(1,1,1);
	}
	50%{
		box-shadow: 0 0 0 32rpx rgba(254,101,101, 0.2);
		transform:scale3d(1.1,1.1,1.1);
	}
	100%{
		box-shadow: 0 0 0 10rpx rgba(254,101,101, 0.2);
		transform:scale3d(0.8,0.8,0.8);
	}
}