/**index.wxss**/

@import "../../wxParse/wxParse.wxss"
.thread_cont{
	width:100%;
	height:900rpx;
	margin:0 auto;
	position:absolute;
	top:10%;
}
.thread_center{
	width:106rpx;
	height:100%;
	margin:0 auto;
	position:relative;
	text-align:center;
}
.vertical_thread{
	width:10rpx;
	height:860rpx;
	background:#151515;
	border:solid 1px #343434;
	border-radius:50rpx;
	margin:0 auto;
	overflow: hidden;
	position: relative;
}
.thread_bg{
	width:100%;
	height:100%;
	background:#fe6565;
	position: absolute;
	top:860rpx;
	left:0;
	transition: all 1s;
	animation: move_up 1s linear;
}
@keyframes move_up{
	0%{
		transform: translateY(0);
	}
	100%{
		transform: translateY(450);
	}
}
.thread_center image{
	width:106rpx;
	height:106rpx;
	position:absolute;
	bottom:0;
	left:0;
}