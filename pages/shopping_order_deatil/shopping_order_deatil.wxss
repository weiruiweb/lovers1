/*banner轮播  */
#content{width:100%;height:700rpx;}
.swiper-container {
  position: relative;
  width:100%;
  height:700rpx;
}
 
.swiper-container .swiper {
  height: 700rpx;
  position: relative;
  overflow:hidden;
}
.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}
.dots swiper{
	height:100%;
}
.swiper-container .small_carousel {
  position: absolute;
  height: 160px;
  right: 0rpx;
  width: 100%;
  bottom:-80rpx;
}
.swiper-container .dotes {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
 
.swiper-container .dotes .dote {
  margin: 0 10rpx;
  width: 28rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  font: 300 18rpx/28rpx "microsoft yahei";
  text-align: center;
}
 
.swiper-container .dotes .dote.actives {
  background: #f80;
  color: #fff;
}
.small_carousel .swiper-item{
	width:160rpx;
	height:160rpx;
}
.scroll-header{
	display: flex;
	white-space: nowrap; 
	width:80%;
	position: absolute;
	right:0;
	bottom:-90rpx;
	height:160rpx;
}
.scroll-header swiper-item{
	width:160rpx;
	height:160rpx;
	text-align: center;
	padding:0 10%;
}
.scroll-header image{
	width:160rpx;
	height:160rpx;
	border-radius: 20rpx;
}
.scroll-header .active image{
	border:solid 1px #fe6565;
	box-sizing: border-box;
}

.small_img{
	width:100%;
