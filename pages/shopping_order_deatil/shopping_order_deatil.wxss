/**index.wxss**/

@import "../../wxParse/wxParse.wxss"
.page-body{
	position: relative;
}
.page-body image{
	width:100%;
	height:700rpx;
}
.swiper-block{
  height: 700rpx;
  width: 100%;
  position:relative;
}
.active{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
  z-index: 20; 
}

.dots{ 
  width:40rpx;
  height:100%; 
  position: absolute;
  left:60rpx;
  top:20%;
} 
.dots .dot{ 
  margin: 12rpx auto; 
  width:20rpx;
  height:20rpx;
  border-radius: 50%; 
} 
.dot .dot_in{
	width: 16rpx; 
  height: 16rpx; 
  background: #633535; 
  border-radius: 50%; 
  transition: all .6s; 
  margin:0 auto;
}
.dots .dot .active{ 
  background: #fd6464; 
  box-shadow: 0 0 16rpx #633535
}
.clothes{
	width:100%;
	height: 190rpx;
	margin-top:110rpx;
}
.clothes_cont{
	margin-top: 20rpx;
}
.clothes_price .txt1{
	font-size: 48rpx;
	font-weight: 700;
}
.clothes_price .txt2{
	text-decoration: line-through;
	color:#707070;
}
.clothes_tit{
	font-weight: 700;
}
.buy_number{
	width:100%;
	height:70rpx;
}
.buy_number_cont{
	width:92%;
	height:100%;
	margin:0 auto;
}
.choose_icon image{
	width:18rpx;
	height:30rpx;
}
.buy_btn{
	width:100%;
	height:120rpx;
	position: fixed;
	left: 0;
	bottom: 0;
	background:#222;
}
.buy_btn_cont{
	padding-left:4.5%;
	width:95.5%;
}
.buy_left{
	width:36.5%;
}
.buy_right{
	width: 72.5%
}
.buy_left image{
	width:54rpx;
	height: 44rpx;
}
.add_cart,.buy_now{
	width:50%;
	height:86rpx;
	line-height: 86rpx;
	text-align: center;
}
.add_cart{
	border-radius: 40rpx 0 0 40rpx;
	overflow: hidden;
}
.add_cart_cont{
	width:100%;
	height:86rpx;
	box-sizing: border-box;
	border-right: solid 1px #222;
	line-height: 86rpx;
}
.purchase{
	width:100%;
	height:86rpx;
	margin-top: 16rpx;
}
/*banner轮播  */
#content{width:100%;height:700rpx;}
.swiper-container {
  position: relative;
  width:100%;
  height:700rpx;
}
 
.swiper-container .swiper {
  height: 700rpx;
  position: relative;
}
.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}
.dots swiper{
	height:100%;
}
.swiper-container .small_carousel {
  position: absolute;
  height: 160px;
  right: 0rpx;
  width: 100%;
  bottom:-80rpx;
}
.swiper-container .dotes {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
 
.swiper-container .dotes .dote {
  margin: 0 10rpx;
  width: 28rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  font: 300 18rpx/28rpx "microsoft yahei";
  text-align: center;
}
 
.swiper-container .dotes .dote.actives {
  background: #f80;
  color: #fff;
}
.small_carousel .swiper-item{
	width:160rpx;
	height:160rpx;
}
.scroll-header{
	display: flex;
	white-space: nowrap; 
	width:80%;
	position: absolute;
	right:0;
	bottom:-90rpx;
	height:160rpx;
}
.scroll-header swiper-item{
	width:160rpx;
	height:160rpx;
	text-align: center;
	padding:0 10%;
}
.scroll-header image{
	width:160rpx;
	height:160rpx;
	border-radius: 20rpx;
}
.scroll-header .active image{
	border:solid 1px #fe6565;
	box-sizing: border-box;
}
.circle{
	width:50rpx;
	height:50rpx;
	background:#fe6565;
	z-index:999;
	position: absolute;
	left:0;
	bottom:0;
}
.small_img{
	width:100%;
	height:100%;
	position: relative;
}