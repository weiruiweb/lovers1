.active{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
  z-index: 20; 
}

.dots{ 
  width:40rpx;
  height:100%; 
  position: absolute;
  left:60rpx;
  top:20%;

} 

.dots .dot{ 
  margin: 12rpx auto; 
  width:20rpx;
  height:20rpx;
  border-radius: 50%; 
} 
.dot .dot_in{
	width: 16rpx; 
  height: 16rpx; 
  background: #633535; 
  border-radius: 50%; 
  transition: all .6s; 
  margin:0 auto;
}
.dots .dot .active{ 
  background: #fd6464; 
  box-shadow: 0 0 16rpx #633535
}
