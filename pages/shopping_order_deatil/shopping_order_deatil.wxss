/**index.wxss**/

@import "../../wxParse/wxParse.wxss"
.page-body{
	position: relative;
}
.page-body image{
	width:100%;
	height:700rpx;
}
swiper{
	height:700rpx;
}
.swiper-block{
  height: 700rpx;
  width: 100%;
  position:relative;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
.slide-image{
  height:100%;
  width: 100%;
  border-radius: 9rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2); 
  margin: 0rpx 30rpx;
  z-index: 1;  
}
.active{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
  z-index: 20; 
}

.dots{ 
  width:40rpx;
  height:100%; 
  position: absolute;
  left:60rpx;
  top:20%;
} 
.dots .dot{ 
  margin: 12rpx auto; 
  width:20rpx;
  height:20rpx;
  border-radius: 50%; 
} 
.dot .dot_in{
	width: 16rpx; 
  height: 16rpx; 
  background: #633535; 
  border-radius: 50%; 
  transition: all .6s; 
  margin:0 auto;
}
.dots .dot .active{ 
  width: 20rpx; 
  background: #fd6464; 
  border:4rpx solid  #633535;
}
.dots .active{ 
  width: 20rpx; 
  height:20rpx;
  background: #fd6464; 
}
.clothes{
	width:100%;
	height: 190rpx;
}
.clothes_cont{
	padding-left:8%;
	margin-top: 20rpx;
}
.clothes_price .txt1{
	font-size: 48rpx;
	font-weight: 700;
}
.clothes_price .txt2{
	text-decoration: line-through;
	color:#707070;
}
.clothes_tit{
	font-weight: 700;
}
.buy_number{
	width:100%;
	height:70rpx;
}
.buy_number_cont{
	width:92%;
	height:100%;
	margin:0 auto;
}
.choose_icon image{
	width:18rpx;
	height:30rpx;
}
.buy_btn{
	width:100%;
	height:120rpx;
	position: fixed;
	left: 0;
	bottom: 0;
}
.buy_btn_cont{
	padding-left:4.5%;
	width:95.5%;
}
.buy_left{
