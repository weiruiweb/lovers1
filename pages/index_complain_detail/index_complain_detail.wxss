/**index.wxss**/
@import "../../wxParse/wxParse.wxss";
.complain_banner{
	width:100%;
	height:140rpx;
}
.complain_top{
	width:100%;
	height:140rpx;
	border-radius: 0 0 30rpx 30rpx;
	overflow: hidden;
}
/**************************/
.complain_user{
	width:100%;
	height:180rpx;
	position: relative;
	top:-90rpx;
}
.user_img{
	width:180rpx;
	height:180rpx;
	border-radius: 50%;
	overflow: hidden;
	border:solid 3px #fe6666;
	margin:0 auto;
}
.complain_cont{
	margin-top:160rpx;
	text-align: center;
	margin-bottom: 46rpx;
}
.complain_list{
	width:100%;
	height:180rpx;
	margin-top: 90rpx;
}
.complain_left{
	width:21%;
	height:100%;
}
.complain_right{
	width:79%;
	height:100%;
}
.complain_detail{
	width:100%;
	height:50%;
	margin-top: 10%;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box; 
	-webkit-box-orient: vertical; 
	-webkit-line-clamp: 4; 
	overflow: hidden; 
}
.comment_user{
	width:100rpx;
	height:100rpx;
	border-radius: 50%;
	overflow: hidden;
	border:solid 3px #fe6666;
	margin:0 auto;
}
.comment_number{
	margin-left: 30rpx;
	float:right;
}
.comment_number image{
	width:22rpx;
	height:20rpx;
	margin-right: 4rpx;
}
.comment_text{
	width:100%;
}