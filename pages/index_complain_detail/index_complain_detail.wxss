/**index.wxss**/
@import "../../wxParse/wxParse.wxss";
.complain_banner{
	width:100%;
	height:140rpx;
}
.complain_top{
	width:100%;
	height:140rpx;
	border-radius: 0 0 30rpx 30rpx;
	overflow: hidden;
}
/**************************/
.complain_user{
	width:100%;
	height:180rpx;
	position: relative;
	top:-90rpx;
}
.user_img{
	width:180rpx;
	height:180rpx;
	border-radius: 50%;
	overflow: hidden;
	border:solid 3px #fe6666;
	margin:0 auto;
}
.user_img image{
	width:180rpx;
	height:180rpx;
	border-radius: 50%;
	overflow: hidden;
	margin:0 auto;
}
.complain_cont{
	margin-top:160rpx;
	text-align: center;
	margin-bottom: 46rpx;
}
.complain_list{
	width:100%;
	height:180rpx;
	margin-top: 90rpx;
}
.complain_left{
	width:21%;
	height:100%;
}
.complain_right{
	width:79%;
	height:100%;
}
.complain_detail{
	width:100%;
	height:50%;
	margin-top: 10%;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box; 
	-webkit-box-orient: vertical; 
	-webkit-line-clamp: 4; 
	overflow: hidden; 
}
.comment_user{
	width:100rpx;
	height:100rpx;
	border-radius: 50%;
	overflow: hidden;
	border:solid 3px #fe6666;
	margin:0 auto;
}
.comment_number{
	margin-left: 30rpx;
	float:right;
}
.comment_number image{
	width:22rpx;
	height:20rpx;
	margin-right: 4rpx;
}
.comment_text{
	width:100%;
}
.comment_textarea{
	width:94%;
	height:250rpx;
	border-radius:10rpx;
	padding:3%;
	background:#333;
	box-shadow:0 0 10rpx #fbb5b5;
	margin:40rpx auto;
	font-size:28rpx;
	overflow:auto;
}
button{
	background:#fe6565;
	color:#fff;
	font-size:30rpx;
}
.comment_box{
	position:fixed;
	bottom:-100%;
	transition:all 1s;
	z-index:999;
}
.mask{
	position:absolute;
	left:0;
	top:0;
	width:100%;
	height:100%;
	overflow:hidden;
	background:rgba(254,101,101,0.1);
}
.send_comment{
	width:150rpx;
	height:60rpx;
	border-radius:50rpx 0 0 50rpx;
	overflow:hidden;
	text-align:center;
	line-height:60rpx;
}