/**index.wxss**/
@import "../../wxParse/wxParse.wxss";
.comment_list{
	padding:0 5%;
	width:90%;
	height:210rpx;
}
.comment_top{
	width:100%;
	height:50%;
}
.comment_bottom{
	width:100%;
	height:50%;
}
.vertical_line{
	width: 16.8%;
	height:100%;
	text-align: center;
}
.line{
	width:1px;
	height:100%;
	border-left: dashed 1px #ff6d6d; 
	margin:0 auto;
}
.comment_img{
	width:21%;
	height:100%;
}
.comment_user{
	width:100rpx;
	height:100rpx;
	border:solid 3px #fd6464;
	border-radius:50%;
	overflow:hidden;
}
.comment_center{
	width:62%;
	height:100%;
}
.comment_right{
	width:17%;
	text-align: right;
}
.comment_number{
	margin-right: 30rpx;
}
.comment_number image{
	width:22rpx;
	height:20rpx;
	margin-right: 4rpx;
}
.comment_text{
	width:100%;
}
.comment_right image{
	width:60rpx;
	height:60rpx;
}
.comment{
	margin-top:50rpx;
}
.heart1{
	width:66rpx;
	height:66rpx;
	border-radius:50%;
	background: rgba(254,101,101,0.4);
	text-align: center;
	margin:0 auto;
}
.heart2{
	width:40rpx;
	height:40rpx;
	border-radius:50%;
	background: rgba(250,136,136,0.4);
	margin:0 auto;
}
.end{
	width:106rpx;
}