/**index.wxss**/

@import "../../wxParse/wxParse.wxss"
.page-body{
	position: relative;
}
.page-body image{
	width:100%;
	height:700rpx;
}
swiper{
	height:700rpx;
}
.swiper-block{
  height: 700rpx;
  width: 100%;
  position:relative;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
.slide-image{
  height:100%;
  width: 100%;
  border-radius: 9rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0,0,.2); 
  z-index: 1;  
}
.active{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
  z-index: 20; 
  overflow:hidden;
}

.dots{ 
  width:40rpx;
  height:100%; 
  position: absolute;
  left:60rpx;
  top:20%;
} 
.dots .dot{ 
  margin: 12rpx auto; 
  width:20rpx;
  height:20rpx;
  border-radius: 50%; 
} 
.dot .dot_in{
	width: 16rpx; 
  height: 16rpx; 
  background: #633535; 
  border-radius: 50%; 
  transition: all .6s; 
  margin:0 auto;
}
.dots .dot .active{ 
  background: #fd6464; 
  box-shadow:0 0 10rpx #633535;
}
.clothes{
	height: 190rpx;
	background:#222;
	margin-top:0;
	border-radius: 50rpx 50rpx 0 0;
}
.buy_number{
	width:100%;
	height:70rpx;
}
.buy_number_cont{
	width:92%;
	height:100%;
	margin:0 auto;
}
.choose_icon image{
	width:18rpx;
	height:30rpx;
}
.buy_btn{
	width:100%;
	height:120rpx;
	position: fixed;
	left: 0;
	bottom: 0;
	background: #222;
}
.buy_btn_cont{
	padding-left:4.5%;
	width:95.5%;
}
.buy_left{
	width:36.5%;
}
.buy_right{
	width: 72.5%
}
.buy_left image{
	width:54rpx;
	height: 44rpx;
}
.add_cart,.buy_now{
	width:50%;
	height:86rpx;
	line-height: 86rpx;
	text-align: center;
}
.add_cart{
	border-radius: 40rpx 0 0 40rpx;
	overflow: hidden;
}
.add_cart_cont{
	width:100%;
	height:86rpx;
	box-sizing: border-box;
	border-right: solid 1px #222;
	line-height: 86rpx;
}
.purchase{
	width:100%;
	height:86rpx;
	margin-top: 16rpx;
}
.product{
	width:100%;
	border-radius: 50rpx 50rpx 0 0;
	background: #222;
	box-shadow:-6rpx -6rpx 20rpx #414141;
	position: relative;
}
.product_cont{
	width:100%;
	position: absolute;
	top:-108rpx;
}
.product_small{
	width:216rpx;
	height:216rpx;
	border-radius: 50%;
	margin:0 auto;
	position: relative;
	top:-108rpx;
	overflow: hidden;
}
.product_small swiper{
	width:216rpx;
	height:216rpx;
	box-shadow:50%;
	overflow: hidden;
}
.product_small swiper-item{
	width:216rpx;
	height:216rpx;
	border-radius:50%;
	overflow: hidden;
	border:solid 4rpx #fe6565;
	box-sizing:border-box;
}
.product_small image{
	width:216rpx;
	height:216rpx;
	border-radius: 50%;
}
.color_left{
	width:50%;
	height:60rpx;
}
.color_left image{
	width:34rpx;
	height:48rpx;
}
.color_choose .black{
	width:60rpx;
	height:60rpx;
	background:#000;
	margin-left:20rpx;
}
.color_choose .white{
	width:60rpx;
	height:60rpx;
	background:#fff;
	margin-left:20rpx;
}
.product_color {
	margin-top:30rpx;
}
.size_left,.size_right{
	width:50%;
	height:86rpx;
}
.size_box{
	margin-bottom:60rpx;
}
.size_choose{
	width:262rpx;
	height:86rpx;
}
.clothes_size{
	width:100%;
	margin-top:66rpx;
}
.choose_box{
	width:262rpx;
	height:44rpx;
	border-radius:30rpx;
	border:solid 1px #8b8b8b;
}
.size_item{
	width:20%;
	text-align: center;
	font-size:24rpx;
	color:#717171;
}
.number_handle{
	width:28%;
	height:100%;
	margin-top:30rpx;
}
.number_handle .add{
	width:30%;
	height:100%;
	text-align:center;
}
.number_handle .add_cont{
	width:40%;
	height:100%;
	text-align:center;
	box-sizing: border-box;
}
.add_number{
	width:46rpx;
	height:46rpx;
	border:solid 4rpx #633535;
	border-radius: 50%;
	margin:0 auto;
	line-height: 46rpx;
	text-align: center;
}
.add image{
	width:40rpx;
	height:42rpx;
	margin:0 auto;
}