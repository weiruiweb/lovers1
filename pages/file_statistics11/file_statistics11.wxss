/**index.wxss**/

@import "../../wxParse/wxParse.wxss"
.statistics{
	width:100%;
}
.statistics_cont{
	padding:0 5%;
	width:90%;
	margin-top:90rpx;
}
.heart2{
	width:108rpx;
	height:108rpx;
	border-radius:50%;
	background: rgba(254,101,101,0.4);
	margin:0 auto;
	text-align: center;
	transition: all 1s;
	animation: ripple1 1s linear infinite;
}

@keyframes ripple1{
	0%{
		box-shadow: 0 0 0 10rpx rgba(254,101,101, 0.2);
		transform:scale3d(1,1,1);
	}
	50%{
		box-shadow: 0 0 0 20rpx rgba(254,101,101, 0.2);
		transform:scale3d(1.1,1.1,1.1);
	}
	100%{
		box-shadow: 0 0 0 10rpx rgba(254,101,101, 0.2);
		transform:scale3d(0.8,0.8,0.8);
	}
}
@keyframes ripple2{
	0%{
		box-shadow: 0 0 0 10rpx rgba(254,101,101, 0.2);
		transform:scale3d(1,1,1);
	}
	50%{
		box-shadow: 0 0 0 20rpx rgba(254,101,101, 0.2);
		transform:scale3d(1.1,1.1,1.1);
	}
	100%{
		box-shadow: 0 0 0 10rpx rgba(254,101,101, 0.2);
		transform:scale3d(0.8,0.8,0.8);
	}
}
